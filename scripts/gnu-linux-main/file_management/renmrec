#!/usr/bin/env bash
# 
# Rename all files matching a name recursively.
# 
# Usage:
#   renmrec <old file name> <new file name>
# 

if [ "$#" -ne 2 ]; then
  echo 'renmrec: invalid number of arguments' 1>&2
  exit 1
fi

find . -depth -type f -name "${1}" | while IFS= read -r file; do
  mv -i "${file}" "$(dirname "${file}")/${2}"
done

