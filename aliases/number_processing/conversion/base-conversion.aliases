hextodec() { local hexFrmtd="${1#*'0x'}"; echo "$((16#"${hexFrmtd}"))"; }        # hextodec: Convert a hexidecimal number to decimal.
dectohex() { printf '%#010x\n' "${1}"; }                                         # dectohex: Convert a decimal number to hexidecimal.

